include ./head.pug
body 
    include ./header.pug
    include ./notification.pug
    .content.padded.filled 
        .panel
            a.panel-link(href="/")
                h1.panel-heading
                    i.fa-solid.fa-angle-left
                    span Admin Panel
            h1.section-heading Teacher List
            if rows.length > 0
                .table
                    .row.header-row
                        .table-head
                            h3.table-data-interior User ID
                        .table-head
                            h3.table-data-interior Teacher Name
                        .table-head
                            h3.table-data-interior Username
                        .table-head
                            h3.table-data-interior Department(s)
                    for row of rows
                        .row.data-row
                            .table-data.table-checkbox-container
                                span #{row.teacher_id}
                            .table-data
                                p.table-data-interior #{row.name}
                            .table-data
                                p.table-data-interior #{row.username}
                            .table-data
                                p.table-data-interior #{row.Departments}
            else
                h2.message No records found!