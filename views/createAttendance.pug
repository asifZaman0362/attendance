include ./head.pug
body 
    include ./header.pug
    .container#centered-flex  
        .login-box
            h1.heading Create Attendance Record
            form(action="/createAttendance", method="get") 
                .input-field-container 
                    label(for="semester") Semester 
                    input(type="text", name="semester", placeholder="enter semester", required)
                .input-field-container 
                    label(for="course") Course 
                    input(type="text", name="course", placeholder="enter course", required)            
                .input-field-container 
                    label(for="subject") Subject 
                    input(type="text", name="subject", placeholder="enter subject", required)
                .date-container 
                    label(for="date") Date 
                    input(type="date", name="date", min="1970-01-01", required)
                input.button(type="submit", value="Create")
            